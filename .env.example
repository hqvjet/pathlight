# =============================================================================
# üì¶ PATHLIGHT PROJECT - ENVIRONMENT CONFIGURATION (EXAMPLE)
# =============================================================================

# =============================================================================
# üéØ APPLICATION CONFIGURATION
# =============================================================================
APP_NAME=PathLight
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
FRONTEND_URL=http://localhost:3000

# =============================================================================
# üóÑÔ∏è DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}
POSTGRES_USER=postgres_user
POSTGRES_PASSWORD=postgres_password
POSTGRES_DB=db_name
# POSTGRES_DB=pathlight
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# =============================================================================
# üö™ SERVICE PORTS
# =============================================================================
API_GATEWAY_PORT=8000
AUTH_SERVICE_PORT=8001
USER_SERVICE_PORT=8002
COURSE_SERVICE_PORT=8003
QUIZ_SERVICE_PORT=8004

# =============================================================================
# üîó INTERNAL SERVICE URLS (Docker Network)
# =============================================================================
AUTH_SERVICE_URL=http://auth-service:${AUTH_SERVICE_PORT}
USER_SERVICE_URL=http://user-service:${USER_SERVICE_PORT}
COURSE_SERVICE_URL=http://course-service:${COURSE_SERVICE_PORT}
QUIZ_SERVICE_URL=http://quiz-service:${QUIZ_SERVICE_PORT}

# =============================================================================
# üîê SECURITY & AUTHENTICATION
# =============================================================================
JWT_SECRET_KEY=your_jwt_secret_key
JWT_REFRESH_SECRET_KEY=your_jwt_refresh_secret_key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# üåê CORS CONFIGURATION
# =============================================================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# =============================================================================
# üì¨ EMAIL CONFIGURATION (Optional)
# =============================================================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password
FROM_EMAIL=noreply@example.com

# =============================================================================
# üõ†Ô∏è ADMIN INITIAL SETUP
# =============================================================================
ADMIN_USERNAME=ADMIN_USERNAME
ADMIN_PASSWORD=ADMIN_PASSWORD
