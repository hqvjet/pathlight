# Pathlight User Service Environment Configuration
# Copy this file to .env and update the values

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/pathlight

# JWT Configuration
JWT_SECRET_KEY=pathlight-super-secret-key-2025-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Service Configuration
USER_SERVICE_PORT=8002
DEBUG=true
LOG_LEVEL=INFO

# Frontend Configuration (for CORS)
FRONTEND_URL=http://localhost:3000

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif

# AWS S3 Configuration for Avatar Storage
ACCESS_KEY_ID=your-aws-access-key-id
SECRET_ACCESS_KEY=your-aws-secret-access-key
REGION=ap-northeast-1
S3_BUCKET_NAME=pathlight-user

# Email Configuration (optional)
EMAIL_ENABLED=false
SMTP_SERVER=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
