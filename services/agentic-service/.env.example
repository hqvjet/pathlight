# Environment Configuration for Sensitive Data
# Copy this file to .env and configure with your actual credentials

# Environment Type
ENVIRONMENT=local

# OpenAI Configuration (REQUIRED)
OPENAI_API_KEY=your_openai_api_key_here

# AWS Configuration (REQUIRED)
ACCESS_KEY_ID=your_access_key_here
SECRET_ACCESS_KEY=your_secret_key_here
REGION=ap-northeast-1
S3_BUCKET_NAME=your_bucket_name_here

# OpenSearch Configuration (PRODUCTION ONLY)
OPENSEARCH_HOST=your-opensearch-domain.region.es.amazonaws.com
OPENSEARCH_PORT=443
OPENSEARCH_USERNAME=your_opensearch_user
OPENSEARCH_PASSWORD=your_opensearch_password
OPENSEARCH_INDEX_NAME=your_index_name_here

# Development Overrides (OPTIONAL)
# Uncomment only if you need to override defaults
# OPENSEARCH_ENABLED=false
# FORCE_OPENSEARCH_LOCAL=true
